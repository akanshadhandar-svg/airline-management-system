<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_Must_Be_Paid</fullName>
    <active>true</active>
    <description>Payment_Must_Be_Paid</description>
    <errorConditionFormula>AND(
    ISPICKVAL(Status__c, &quot;Confirmed&quot;),
    NOT(ISPICKVAL(Payment_Status__c, &quot;Paid&quot;))
)</errorConditionFormula>
    <errorMessage>Cannot confirm booking until payment is completed.</errorMessage>
</ValidationRule>
